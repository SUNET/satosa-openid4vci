{
  "logging": {
    "version": 1,
    "disable_existing_loggers": false,
    "root": {
      "handlers": [
        "default",
        "console"
      ],
      "level": "DEBUG"
    },
    "loggers": {
      "entity": {
        "level": "DEBUG"
      }
    },
    "handlers": {
      "default": {
        "class": "logging.FileHandler",
        "filename": "log/dc4eu_debug.log",
        "formatter": "default"
      },
      "console": {
        "class": "logging.StreamHandler",
        "stream": "ext://sys.stdout",
        "formatter": "default"
      }
    },
    "formatters": {
      "default": {
        "format": "%(asctime)s %(name)s %(levelname)s %(message)s"
      }
    }
  },
  "template_dir": "templates",
  "entity": {
    "entity_id": "https://127.0.0.1:5005",
    "httpc_params": {
      "verify": false
    },
    "key_config": {
      "key_defs": [
        {
          "type": "RSA",
          "use": [
            "sig"
          ]
        },
        {
          "type": "EC",
          "crv": "P-256",
          "use": [
            "sig"
          ]
        }
      ]
    },
    "trust_anchors": {
      "class": "idpyoidc.storage.abfile.AbstractFileSystem",
      "kwargs": {
        "fdir": "flask_wallet/trust_anchors",
        "key_conv": "idpyoidc.util.Base64",
        "value_conv": "idpyoidc.util.JSON"
      }
    },
    "services": [
      "entity_configuration",
      "entity_statement",
      "list",
      "trust_mark_status"
    ],
    "entity_type": {
      "wallet": {
        "class": "openid4v.client.Wallet",
        "kwargs": {
          "config": {
            "services": {
              "integrity": {
                "class": "openid4v.client.device_integrity_service.IntegrityService"
              },
              "key_attestation": {
                "class": "openid4v.client.device_integrity_service.KeyAttestationService"
              },
              "wallet_instance_attestation": {
                "class": "openid4v.client.wallet_instance_attestation.WalletInstanceAttestation"
              },
              "challenge": {
                "class": "openid4v.client.challenge.ChallengeService"
              },
              "registration": {
                "class": "openid4v.client.registration.RegistrationService"
              }
            }
          },
          "key_conf": {
            "private_path": "private/wallet_jwks.json",
            "key_defs": [
              {
                "type": "EC",
                "crv": "P-256",
                "use": [
                  "sig"
                ]
              }
            ],
            "read_only": false
          }
        }
      },
      "pid_eaa_consumer": {
        "class": "openid4v.client.pid_eaa_consumer.PidEaaHandler",
        "kwargs": {
          "config": {
            "base_url": "",
            "add_ons": {
              "pkce": {
                "function": "idpyoidc.client.oauth2.add_on.pkce.add_support",
                "kwargs": {
                  "code_challenge_length": 64,
                  "code_challenge_method": "S256"
                }
              },
              "dpop": {
                "function": "idpyoidc.client.oauth2.add_on.dpop.add_support",
                "kwargs": {
                  "dpop_signing_alg_values_supported": [
                    "ES256"
                  ]
                }
              }
            },
            "preference": {
              "client_authn_methods": [
                "private_key_jwt"
              ],
              "response_types_supported": [
                "code"
              ],
              "response_modes_supported": [
                "query",
                "form_post"
              ],
              "request_parameter_supported": true,
              "request_uri_parameter_supported": true,
              "token_endpoint_auth_methods_supported": [
                "private_key_jwt"
              ],
              "token_endpoint_auth_signing_alg_values_supported": [
                "ES256"
              ]
            },
            "services": {
              "pid_eaa_authorization": {
                "class": "openid4v.client.pid_eaa.Authorization",
                "kwargs": {
                  "client_authn_methods": {
                    "client_attestation": "openid4v.client.client_authn.ClientAuthenticationAttestation"
                  },
                  "default_authn_method": "client_attestation"
                }
              },
              "pid_eaa_token": {
                "class": "openid4v.client.pid_eaa.AccessToken",
                "kwargs": {
                  "client_authn_methods": {
                    "client_attestation": "openid4v.client.client_authn.ClientAuthenticationAttestation"
                  },
                  "default_authn_method": "client_attestation"
                }
              },
              "credential": {
                "path": "credential",
                "class": "openid4v.client.pid_eaa.Credential",
                "kwargs": {
                  "client_authn_methods": {
                    "dpop_header": "openid4v.client.client_authn.DPoPHeader"
                  },
                  "default_authn_method": "dpop_header"
                }
              }
            }
          }
        }
      }
    }
  },
  "webserver": {
    "server_cert": "certs/example.crt",
    "server_key": "certs/example.key",
    "cert_chain": null,
    "port": 5005,
    "domain": "127.0.0.1",
    "debug": true
  }
}
